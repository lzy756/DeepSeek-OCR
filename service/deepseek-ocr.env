# DeepSeek-OCR API Service Environment Configuration
# Edit this file to customize service behavior

# ============================================================
# Model Configuration
# ============================================================
MODEL_PATH=deepseek_ocr/
MAX_CONCURRENCY=100
MAX_MODEL_LEN=8192

# ============================================================
# Resolution Configuration
# ============================================================
BASE_SIZE=1024
IMAGE_SIZE=640
CROP_MODE=True

# ============================================================
# API Server Configuration
# ============================================================
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================
# Authentication Configuration
# ============================================================
APIKEY_FILE=APIKEY.keys

# ============================================================
# Task Queue Configuration
# ============================================================
TASK_TTL_SECONDS=3600
MAX_QUEUE_SIZE=100

# ============================================================
# File Upload Configuration
# ============================================================
MAX_FILE_SIZE_MB=20

# ============================================================
# PDF Configuration
# ============================================================
MAX_PDF_PAGES=50
PDF_DPI=144

# ============================================================
# Temporary Files Configuration
# ============================================================
TEMP_DIR=output

# ============================================================
# vLLM Configuration
# ============================================================
VLLM_USE_V1=0

# ============================================================
# CUDA Configuration (uncomment if using CUDA 11.8)
# ============================================================
# TRITON_PTXAS_PATH=/usr/local/cuda-11.8/bin/ptxas

# ============================================================
# CORS Configuration
# ============================================================
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
